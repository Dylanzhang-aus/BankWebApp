@model BillPay
@{
    ViewData["Title"] = "Delete";
}
@{
    await Html.RenderPartialAsync("_HeadNavBar");
}
<h1>Delete</h1>
<h3>Are you sure you want to delete this BillPay?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduleDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduleDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Period)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Period)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Account.AccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Payee.PayeeName)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="BillPayID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ViewPayBill">Back to MyBillList</a>
    </form>
</div>
