@model Assignment2_WDT.Models.BillPay
@{
    ViewData["Title"] = "Modify";
}
@{
    await Html.RenderPartialAsync("_HeadNavBar");
}
<h1>Modify</h1>
<h4>BillPay</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Modify">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BillPayID" />
            <input type="hidden" asp-for="AccountNumber" />
            <input type="hidden" asp-for="PayeeID" />
            <input type="hidden" asp-for="ModifyDate" />
            <input type="hidden" asp-for="Is_blocked" />
            <input type="hidden" asp-for="Status" />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
                @Html.ValidationMessage("AmountError", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label asp-for="ScheduleDate" class="control-label"></label>
                <input asp-for="ScheduleDate" class="form-control" />
                <span asp-validation-for="ScheduleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period" class="control-label"></label>
                <select asp-for="Period" class="form-control" asp-items="ViewBag.Period"></select>
                <span asp-validation-for="Period" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="ViewPayBill">Back to MyBillList</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
