@model BillPay
@{
    ViewData["Title"] = "Block";
}

<h4>Block Bill Pays</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Block">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BillPayID" />
            <div class="form-group">
                <input type="hidden" asp-for="AccountNumber" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="PayeeID" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Amount" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ScheduleDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Period" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ModifyDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Is_blocked" class="control-label"></label>
                <input asp-for="Is_blocked" class="form-control" />
                <span asp-validation-for="Is_blocked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="AdminView">Back</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

