@model Customer
@{
    ViewData["Title"] = "Lock";
}

<h1>Confirmation</h1>

<h4>CustomerID : @Model.CustomerID</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Lock">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerID" />
            <input type="hidden" asp-for="CustomerName" />
            <input type="hidden" asp-for="TFN" />
            <input type="hidden" asp-for="City" />
            <input type="hidden" asp-for="State" />
            <input type="hidden" asp-for="PostCode" />
            <input type="hidden" asp-for="Phone" />
            <input type="hidden" asp-for="Is_NewCustomer" />
            <input type="hidden" asp-for="EmailAdress" />

            <div class="form-group">
                <label asp-for="Is_locked" class="control-label"></label>
                <select asp-for="Is_locked" class="form-control" asp-items="ViewBag.Lock"></select>
                <span asp-validation-for="Is_locked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AccountView" asp-route-id="@Model.CustomerID">Back to Account</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
